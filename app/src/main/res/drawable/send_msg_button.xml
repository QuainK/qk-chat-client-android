<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- solid: color 填充色 -->
    <solid android:color="#03A9F4" />
    <!-- corners: 按钮四角弧形 radius 弧形半径-->
    <corners android:radius="5dp" />
    <!-- padding：内边距 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>
